<!DOCTYPE html>
<html>
<head>
    <title>Alunos</title>
    <link rel="icon" href="/images/Logo-pp-school.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <h1 class="mb-4">Lista de Alunos</h1>

    <a href="/alunos/novo" class="btn btn-primary mb-3">+ Novo Aluno</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Matrícula</th>
                <th>Turma</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% alunos.forEach(aluno => { %>
                <tr>
                    <td><%= aluno.nome %></td>
                    <td><%= aluno.matricula %></td>
                    <td><%= aluno.turma_nome %></td>
                    <td>
                        <a href="/alunos/editar/<%= aluno.id %>" class="btn btn-sm btn-warning">Editar</a>
                        <a href="/alunos/excluir/<%= aluno.id %>" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/" class="btn btn-secondary">← Voltar</a>
</body>
</html>